extends layout-admin

block content

  ol.breadcrumb
    li.breadcrumb-item
      a(href="/") Home
    li.breadcrumb-item
      a(href="/admin/") Admin
    li.breadcrumb-item
      a(href="/admin/gifts") Gifts
    li.breadcrumb-item
      a(href=`/admin/gift/${gift.id}`)= gift.name
    li.breadcrumb-item.active Delete

  h1= gift.name

  ul
    li name = #{gift.id}
    li title = #{gift.name}
    li description = #{gift.description}
    li amount = #{gift.amount}
    li currency = #{gift.currency}
    li statement = #{gift.statement}

  form(method="post")

    .form-group.row
      label.col-3.col-form-label Confirmation Required
      .col-9
        input.form-control(
          type="text"
          readonly
          value="Are you sure you wish to delete this gift option?"
        )

    .form-group.row
      .offset-sm-3.col-sm-9
        button.btn.btn-primary(type="submit") Confirm
        a.btn.btn-default(href="/admin/gifts") Cancel
